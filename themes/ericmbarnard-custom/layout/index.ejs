<!-- Main Content -->
<div class="container">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

			<% page.posts.each(function(post){ %>
				<%- partial('_partial/post-excerpt', { post: post }) %>
			<% }); %>

			<!-- Pager -->
			<% if (site.total_pages > 1) { %>
			<ul class="pager">
			    <% if (page.prev) { %>
			    <li class="previous">
			        <a href="<%= url_for(page.prev.path) %>">&larr; Newer Posts</a>
			    </li>
			    <% } %>
			    <% if (page.next) { %>
			    <li class="next">
			        <a href="<%= url_for(page.next.path) %>">Older Posts &rarr;</a>
			    </li>
			    <% } %>
			</ul>
			<% } %>

		</div>
	</div>
</div>

<hr>